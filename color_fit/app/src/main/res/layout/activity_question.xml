<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choice_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/t_1"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:background="@drawable/box"
        android:elevation="30dp"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/rdgQ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_margin="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/t_2"/>
            <RadioButton
                android:id="@+id/rdBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomRadioTheme"
                android:textColor="#3A136D"
                android:textSize="15dp"
                android:text="  까맣게 탄다."/>
            <RadioButton
                android:id="@+id/rdRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomRadioTheme"
                android:textColor="#3A136D"
                android:textSize="15dp"
                android:text="  빨갛게 익는다."/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rdgQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/t_5" />
            <RadioButton
                android:id="@+id/rdSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomRadioTheme"
                android:textColor="#3A136D"
                android:textSize="15dp"
                android:text="  실버 계열이 잘어울린다."/>
            <RadioButton
                android:id="@+id/rdGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/CustomRadioTheme"
                android:textColor="#3A136D"
                android:textSize="15dp"
                android:text="  골드 계열이 잘어울린다."/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:layout_margin="50dp"
        android:id="@+id/btnResult"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:background="@drawable/round"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="#EAE8FE"
        android:fontFamily="@font/asgeb"
        android:text="결과 보기"/>

</LinearLayout>