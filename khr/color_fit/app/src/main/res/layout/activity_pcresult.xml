<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginBottom="0dp"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/pcresultimg"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="@drawable/pcresultbackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="20dp"
            android:background="#EFEFF4"
            android:scaleType="centerInside"
            android:src="@drawable/pcresulttext1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRtAutumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asgsb"
                android:textSize="24dp"
                android:textColor="#3A136D"
                android:text="가을 웜톤 "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asgul"
                android:textSize="24dp"
                android:textColor="#3A136D"
                android:text="입니다."/>
        </LinearLayout>
        <ImageView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="#EFEFF4"
            android:scaleType="centerInside"
            android:src="@drawable/pcresultunderbar" />

        <TextView
            android:id="@+id/autumnex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textColor="#3A136D"
            android:text="센치하게 가을 웜톤!"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        android:src="@drawable/pcresultbutton" />

</LinearLayout>