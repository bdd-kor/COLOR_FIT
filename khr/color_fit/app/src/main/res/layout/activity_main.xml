<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/sv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:iconifiedByDefault="false"
            style="@style/MySearchViewStyle"
            app:queryHint="검색어를 입력하시오" />
        <ImageButton
            android:id="@+id/btnFilter"
            android:gravity="right"
            android:layout_width="35dp"
            android:background="#FFFFFF"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/filter"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                android:id="@+id/autoViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints"></cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#EAE8FE">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:fontFamily="@font/asgsb"
                android:textColor="#3A136D"
                android:textSize="20dp"
                android:text="나의 퍼스널컬러는 "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/asgsb"
                    android:textColor="#EAE8FE"
                    android:colorAcent = "#3A136D"
                    android:textSize="20dp"
                    android:text="가을 웜톤"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/asgsb"
                    android:textColor="#3A136D"
                    android:textSize="20dp"
                    android:text=" 입니다."/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/recycler_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="6"
                android:divider="#00FF00"
                android:dividerHeight="1dp"
                android:fastScrollEnabled="true"
                android:padding="5dp"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

    </ScrollView>




</LinearLayout>